#!/bin/bash


if [ "$1" == "build" ]
then
  docker build -t judge:tigervnc -f ./tiger-vnc/Dockerfile  .
  exit
fi

running=$(docker inspect --format "{{.State.Running}}" "tigervnc"i  2>/dev/null)
[ "$running" != "" ] && echo "Running $running"

ID=$(docker container ls -a | grep vncviewer | awk -F' ' '{print $1}')
[ "$ID" != "" ] && echo "Container ID $ID"

if [ "$ID" != "" ]
then
  if [ "$running" == "true" ]
  then
    echo "Stop container $ID"
    docker stop $ID
  fi
  echo "Remove Container $ID"
  docker container rm $ID
fi

echo "Create and Run new tigervnc container"

docker run -it --rm \
        -v /etc/localtime:/etc/localtime:ro \
        -v /tmp/.X11-unix:/tmp/.X11-unix \
        -v ~/.vnc:/vnc \
        -e "DISPLAY=unix${DISPLAY}" \
        --net host \
        --name tigervnc \
        -d judge:tigervnc "torrent:5901" "-passwd" "/vnc/passwd"

