# audio controls
set $mute    exec pactl set-sink-mute @DEFAULT_SINK@ toggle      # mic mute
set $mic_off exec pactl set-source-mute @DEFAULT_SOURCE@ toggle  # speaker mute
set $vol_dn  exec pactl set-sink-volume @DEFAULT_SINK@ -5% # -1000
set $vol_up  exec pactl set-sink-volume @DEFAULT_SINK@ +5% # +1000
bindsym XF86AudioMute        $mute
bindsym XF86AudioMicMute     $mic_off
bindsym XF86AudioLowerVolume $vol_dn
bindsym XF86AudioRaiseVolume $vol_up
